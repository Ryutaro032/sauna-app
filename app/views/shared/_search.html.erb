<form>
  <div class="search-form">
    <%= form_with url: facility_index_path, method: :get do |f| %>
      <%= f.collection_select :prefecture, Prefecture.all, :id, :name, { prompt: "都道府県を選択" }, { id: "prefecture_select", class: "search-field"} %>
      <%= f.select :city, [], {}, { include_blank: "", class: "default-city-select search-field" } %>
      <% Prefecture.all.each do |prefecture| %>
        <template id="city-select<%= prefecture.id %>">
          <%= f.collection_select :city, prefecture.cities, :id, :name, include_blank: "市区町村を選択してください" %>
        </template>
      <% end %>
      <%= f.search_field :word, class: "search-field", id: "list_search_field",  placeholder: "キーワードを入力" %>
      <%= f.submit "検索", class: "search-btn", id: "list-search-btn" %>
    <% end %>
  </div>
</form>
