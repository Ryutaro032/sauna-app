<div class="header-container">
  <header>
    <div class="header-left">
      <%= image_tag 'sauna-logo.png', alt:'ロゴ', class: "img header-logo"%>
      <h2 class="heading"><%= link_to 'サウナログ',root_path, class: "link", 'data-turbolinks': false %></h2>
    </div>
    <div class="header-right">
      <nav>
        <div class="nav-toggle">
          <span class="nav-bar"></span>
          <span class="nav-bar"></span>
          <span class="nav-bar"></span>
        </div>
      </nav>
