<div class="facility-detail-warappwer">
  <div class="facility-detail-container">
    <div>
      <%= render 'shared/flash_message' %>
    </div>
    <div>
      <h1><%= @place_details.name %></h1>
      <p><%= @place_details.formatted_address %></p>
    </div>
  </div>
  <% if current_user %>
    <% if @facility.favorited_by?(current_user) %>
      <%= button_to "お気に入りから削除", favorite_facility_path(@facility), method: :delete, class: "button" %>
    <% else %>
      <%= button_to "お気に入りに追加", favorite_facility_path(facility: { name: @facility.name, address: @facility.address, latitude: @facility.latitude, longitude: @facility.longitude, place_id: @facility.place_id }), method: :post, class: "button base-color" %>
    <% end %>
  <% end %>
</div>
