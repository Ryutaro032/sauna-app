<div class="user-warapper">
  <h2>レビューを投稿する</h2>
  <div class="form">
    <%= form_with model: @post, method: :post do |f| %>
      <div class="facility-name"><%= @facility.name %></div>
      <%= f.hidden_field :facility_id, value: @facility.id %>
      <%= f.hidden_field :name, value: @facility.name %>
      <div>
        <%= f.label :title, "タイトル" %><br>
        <%= f.text_field :title, size: 80 %>
        <% if @post.errors[:title].any? %>
          <div class="error-message">
            <%= @post.errors[:title] %>
          </div>
        <% end %>
      </div>
      <div>
        <%= f.label :review, "レビュー内容" %><br>
        <%=f.text_area :review, rows: 10, cols: 80 %>
        <% if @post.errors[:review].any? %>
          <div class="error-message">
            <%= @post.errors[:review] %>
          </div>
        <% end %>
      </div>
      <%=f.submit "投稿する", class: "link-btn base-color"%>
    <% end %>
  </div>
</div>
