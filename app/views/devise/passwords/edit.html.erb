<div class="user-warapper">
  <h2 class="heading">パスワードの変更</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions back-contents">
      <button class="link-btn back-btn base-color"><%= link_to "⬅︎", :back %></button>
      <%= f.submit "パスワードを変更する", class: "base-color link-btn" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
